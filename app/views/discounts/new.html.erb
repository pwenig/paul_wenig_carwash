<div class="container">
  <div class="col-xs-12 col-sm-9">
    <div class="jumbotron">
      <h2>Create New Discounts</h2>
      
      <%= simple_form_for @discount do |f| %>
        <%= f.input :name, required: true %>
        <%= f.input :threshold, placeholder: 'i.e. # of visits', required: true %>
        <%= f.input :equator, collection: ['Equal', 'Greater'], required: true %>
        <%= f.input :amount, required: true %>
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>


