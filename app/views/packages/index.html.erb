<div class="container">
  <div class="col-xs-12 col-sm-9">
    <div class="jumbotron">
      <h2>Packages</h2>
      <table>
        <tr>
          <th>Name</th>
          <th>Description</th> 
          <th>Price</th>
          <th></th>
          <th></th>
          
        </tr>
        <% @packages.each do |package|%>
          <tr>
          <td><%= package.name %></td>
          <td><%= package.description %></td>
          <td><%= package.price %></td>
          <td><%= link_to 'Edit', package_path(package) %></td>
          <td><%=link_to "Delete", package, method: :delete, class: "delete_button"%>
        </tr>
        <% end %>
      </table>
      <button type="button" class="btn btn-primary"><%= link_to 'Add Package', new_package_path, {:style=>'color:white;', :class => "css_class"}%></button>
    </div>
  </div>
</div>


