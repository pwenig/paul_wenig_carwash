<div class="container">
  <div class="col-xs-12 col-sm-9">
    <div class="jumbotron">
      <h2>Sales Report</h2>
      <table>
        <tr>
          <th>Date</th>
          <th>Customer Name</th>
          <th>License No.</th>
          <th>Amount</th>
        </tr>

        <% @washes.each do |wash|%>
          <tr>
          <td><%= wash.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= wash.customer.first_name %> <%= wash.customer.last_name%></td>
          <td><%= wash.customer.license %></td>
          <td><%= wash.amount %></td>
        </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>


