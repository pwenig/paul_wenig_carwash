<div class="container">
  <div class="col-xs-12 col-sm-9">
    <div class="jumbotron">
      <h2>Add-ons</h2>
      <table>
        <tr>
          <th>Name</th>
          <th>Description</th> 
          <th>Price</th>
          <th></th>
          <th></th>
        </tr>
         <% @addons.each do |addon|%>
          <tr>
          <td><%= addon.name %></td>
          <td><%= addon.description %></td>
          <td><%= addon.price %></td>
          <td><%= link_to 'Edit', addon_path(addon) %></td>
          <td><%=link_to "Delete", addon, method: :delete, class: "delete_button"%>
        </tr>
        <% end %>
        
      </table>
      <button type="button" class="btn btn-primary"><%= link_to 'Add Add-on', new_addon_path, {:style=>'color:white;', :class => "css_class"}%></button>

    </div>
  </div>
</div>


