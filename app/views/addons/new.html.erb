<div class="container">
  <div class="col-xs-12 col-sm-9">
    <div class="jumbotron">
      <h2>Create New Addons</h2>
      
      <%= simple_form_for @addon do |f| %>
        <%= f.input :name, required: true %>
        <%= f.input :description %>
        <%= f.input :price, required: true %>
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>


